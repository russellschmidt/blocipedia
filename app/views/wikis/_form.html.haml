.row
  = form_for wiki do |f|
    .row
      = f.label :title
      = f.text_field :title, placeholder: "The Wiki Title"
    .row
      = f.label :body
      = f.text_area :body, placeholder: "The wiki content goes here."
    - if current_user.admin? || current_user.premium?
      .row
        = f.label :private
        = f.check_box :private
        - if wiki.private
          .row
            %h4 Current Collaborators
            - wiki.collaborators.each do |collaborator|
              %ul
                %li #{collaborator.email}
          .row
            %h4 Add Collaborators
    .row
      = f.submit "Save", class: "button info"
      = link_to "Cancel", wikis_path, class: "button"
